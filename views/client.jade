extends layout

block content
	div#poll-container.full-height(ng-app = "myApp", ng-controller='ClientCtrl')
		div(class='page-header hidden-phone') 
			h1 Polli <small> - jede Stimme zählt.</small> 
		div#poll-feedback.full-height(ng-show="hasPolled")
			| Danke für die Teilnahme! <i class="icon-thumbs-up"></i> 
		div.full-height(ng-show="!hasPolled")
			div#yesNoControlls.full-height(ng-show='isActivePollType("yes_no")')
				div.button(ng-click="vote('yes');", class="button2 large-font") ja
				div.button(ng-click="vote('no');", class="button2 large-font") nein
			each i in _.range(2,7)
				div.full-height(ng-show='isActivePollType("choice#{i}")')
					each j in _.range(1,7)
						if  j < i+1
							div.button(ng-click="vote(#{j})", class="button6 large-font") #{j}
						else 
							div.button(class="button6 disabled large-font") #{j}