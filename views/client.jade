extends layout

block content
	div#controlls.full-height(ng-app = "myApp", ng-controller='ClientCtrl' )
		div#yesNoControlls(ng-show='isActivePollType("yes_no")')
			div.button(ng-click="vote('yes');") yes
			div.button(ng-click="vote('no');") no
		div#singleControlls(ng-show='isActivePollType("simple")')
			div(ng-click="vote('yes');") button
		each i in _.range(2,10)
			div.full-height(ng-show='isActivePollType("choice#{i}")')
				each j in _.range(1,i+1)
					div.button(ng-click="vote(#{j})", class="button#{i}") #{j}