// color1 = #428681
// color2 = #dddddd

color1 = #222222
color2 = #dddddd
color3 = #409D5C

.logo{
    margin-right 12px
    margin-top 0px
    width 32px 
    height 32px 
    background url(../img/logo.png)
    background-size 32px 32px
    display inline-block
    background-position:0px 2px;
    background-repeat: no-repeat
}

@media only screen and (-webkit-min-device-pixel-ratio: 2) {
     .logo {
          background url(../img/logo@2x.png)
        background-position:0px 2px;
     }
}

body, html
    height 100%
    background-color color1
    color color2

svg
    .light
        fill color2

    .dark
        fill color1
    .highlight
        fill color3 !important


#poll-feedback{
    margin-top: 30px;
    font-size: 60px;
    text-align: center;
    line-height: 60px;
}

#poll-container{
    margin: 0 auto;
    max-width: 720px;
}

#qrcode-svg{
    margin-top: 10px;
    background-color: color2;
}

.full-height{
    height: 100%;
}

.left{
    float: left;
}


.button{
    box-sizing: border-box;
    width: 100%;
    height: 65px; 

    text-align: center;
    border: 1px solid color2;
    vertical-align: middle;

    font-size: 40px;

    background-color: lighten(color1, 10%);
    float: left;

    &.disabled{
        background-color: lighten(color1, 50%);
        color: darken(color2, 30%);
    }

    &.large-font{
        font-size: 72px;
    }
    


}

.button2{
    height: 50%;
    max-width: 360px;
    max-height: 200px;
}

.button6{
    height: 33.333%;

    width: 50%;
    max-width: 240px;
    max-height: 200px;

}



.half-width{
    float: left;
    width: 50%;
}

.button:active{
    background-color: #555555;
}



.chart{
    background: darken(color1, 30%);

    rect{
        fill: color2;
    }
}

#plot{
    border: 1px solid color2;
}

 
@media (max-width: 767px) {
    body {
        padding-right: 0px;
        padding-left: 0px;
    }

    .button2{
        height: 50%;
        max-width: 100% !important;
        max-height: 50% !important;
    }
}