@import 'nib'

body, html{
    height: 100%;
    background-color: #222222;
    color: #dddddd;
}

#poll-feedback{
    margin-top: 30px;
    font-size: 60px;
    text-align: center;
    line-height: 60px;
}

#poll-container{
    margin: 0 auto;
    max-width: 720px;
}

.full-height{
    height: 100%;
}

.left{
    float: left;
}


.button{
    box-sizing: border-box;
    width: 100%;
    height: 65px; 

    text-align: center;
    border: 1px solid white;
    vertical-align: middle;

    font-size: 40px;
    // font-family: 'Raleway', sans-serif;

    background-color: #333333;
    float: left;

    &.disabled{
        background-color: lighten(#333333, 40%);
        color: darken(#dddddd, 30%);
    }

    &.large-font{
        font-size: 72px;
    }
    


}

.button2{
    height: 50%;
    max-width: 360px;
    max-height: 200px;
}

.button6{
    height: 33.333%;

    width: 50%;
    max-width: 240px;
    max-height: 200px;

}



.half-width{
    float: left;
    width: 50%;
}

.button:active{
    background-color: #555555;
}

rect{
    background-color: #dddddd;
    fill: #dddddd;
}

.chart{
    background: #111111;
}

 
@media (max-width: 767px) {
    body {
        padding-right: 0px;
        padding-left: 0px;
    }

    .button2{
        height: 50%;
        max-width: 100% !important;
        max-height: 50% !important;
    }
}